@model CRUDangular_1.Models.user
@{
    ViewBag.Title = "Login";
}
<div class="container">
<nav class="navbar navbar-toggleable-md navbar-light bg-faded" style="background-color:white">
<a class="navbar-brand" href="#">Allama Iqbal Open University </a>

</nav>

<div class="container">
 <div class="row">
        <div class="col-md-offset-8 col-md-3">
            <div class="form-login">
            <h4>LOGIN</h4>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {

                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control input-sm chat-input" , id="userName", placeholder = "username", required = "required" }})
                    <br /> 
                    @Html.EditorFor(model => model.u_password,new { htmlAttributes = new { @class = "form-control input-sm chat-input", @id="userPassword" ,placeholder = "Password", required = "required",@type="password" }})
                    @Html.ValidationMessageFor(model => model.u_password)
            
            <br />
            <div class="wrapper">
            <span class="group-btn">     
                <input type="submit" class="btn btn-primary btn-md" value="ENTER">
            </span>
            </div>
}
            </div>
        
        </div>
    </div>
</div>
</div>